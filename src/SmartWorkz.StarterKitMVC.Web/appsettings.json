{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=StarterKitMVC;Trusted_Connection=True;TrustServerCertificate=True",
    "Redis": ""
  },

  "Features": {
    "Identity": {
      "Enabled": true,
      "Provider": "AspNetIdentity",
      "RequireConfirmedEmail": false,
      "PasswordPolicy": {
        "RequireDigit": true,
        "RequireLowercase": true,
        "RequireUppercase": true,
        "RequireNonAlphanumeric": false,
        "MinimumLength": 8
      }
    },

    "Authentication": {
      "Jwt": {
        "Enabled": true,
        "Secret": "YourSuperSecretKeyThatIsAtLeast32CharactersLong!",
        "Issuer": "SmartWorkz.StarterKitMVC",
        "Audience": "StarterKitMVC.Users",
        "ExpiryMinutes": 60,
        "RefreshTokenExpiryDays": 7
      },
      "OAuth": {
        "Google": {
          "Enabled": false,
          "ClientId": "",
          "ClientSecret": ""
        },
        "Microsoft": {
          "Enabled": false,
          "ClientId": "",
          "ClientSecret": "",
          "TenantId": "common"
        },
        "GitHub": {
          "Enabled": false,
          "ClientId": "",
          "ClientSecret": ""
        },
        "Facebook": {
          "Enabled": false,
          "AppId": "",
          "AppSecret": ""
        }
      },
      "TwoFactor": {
        "Enabled": false,
        "Provider": "Email",
        "Authenticator": {
          "Enabled": false,
          "Issuer": "StarterKitMVC"
        }
      }
    },

    "MultiTenancy": {
      "Enabled": true,
      "Strategy": "Subdomain",
      "DefaultTenantId": "default",
      "HeaderName": "X-Tenant-ID",
      "QueryParamName": "tenantId"
    },

    "Caching": {
      "Enabled": true,
      "Provider": "Memory",
      "DefaultExpirationMinutes": 30,
      "Redis": {
        "Enabled": false,
        "InstanceName": "StarterKit_"
      }
    },

    "Logging": {
      "Enabled": true,
      "Provider": "Serilog",
      "IncludeScopes": true,
      "Seq": {
        "Enabled": false,
        "ServerUrl": "http://localhost:5341"
      },
      "ApplicationInsights": {
        "Enabled": false,
        "ConnectionString": ""
      },
      "ElasticSearch": {
        "Enabled": false,
        "NodeUri": "http://localhost:9200"
      }
    },

    "BackgroundJobs": {
      "Enabled": true,
      "Provider": "InMemory",
      "Hangfire": {
        "Enabled": false,
        "DashboardPath": "/hangfire",
        "DashboardAuthorization": true
      },
      "Quartz": {
        "Enabled": false
      }
    },

    "EventBus": {
      "Enabled": true,
      "Provider": "InMemory",
      "RetryCount": 3,
      "RabbitMQ": {
        "Enabled": false,
        "HostName": "localhost",
        "Port": 5672,
        "UserName": "guest",
        "Password": "guest",
        "VirtualHost": "/"
      },
      "AzureServiceBus": {
        "Enabled": false,
        "ConnectionString": ""
      },
      "Kafka": {
        "Enabled": false,
        "BootstrapServers": "localhost:9092"
      }
    },

    "Notifications": {
      "Enabled": true,
      "Email": {
        "Enabled": true,
        "Provider": "Smtp",
        "FromAddress": "noreply@example.com",
        "FromName": "StarterKitMVC",
        "Smtp": {
          "Host": "smtp.example.com",
          "Port": 587,
          "UseSsl": true,
          "UserName": "",
          "Password": ""
        },
        "SendGrid": {
          "Enabled": false,
          "ApiKey": ""
        }
      },
      "Sms": {
        "Enabled": false,
        "Provider": "Twilio",
        "Twilio": {
          "AccountSid": "",
          "AuthToken": "",
          "FromNumber": ""
        }
      },
      "Push": {
        "Enabled": false,
        "Provider": "Firebase",
        "Firebase": {
          "ServerKey": "",
          "SenderId": ""
        },
        "OneSignal": {
          "Enabled": false,
          "AppId": "",
          "ApiKey": ""
        }
      },
      "SignalR": {
        "Enabled": true,
        "HubPath": "/notificationHub"
      }
    },

    "Storage": {
      "Enabled": true,
      "Provider": "Local",
      "BasePath": "uploads",
      "MaxFileSizeMB": 10,
      "AllowedExtensions": [".jpg", ".jpeg", ".png", ".gif", ".pdf", ".doc", ".docx"],
      "Azure": {
        "Enabled": false,
        "ConnectionString": "",
        "ContainerName": "uploads"
      },
      "S3": {
        "Enabled": false,
        "AccessKey": "",
        "SecretKey": "",
        "BucketName": "",
        "Region": "us-east-1"
      }
    },

    "AI": {
      "Enabled": false,
      "Provider": "OpenAI",
      "OpenAI": {
        "ApiKey": "",
        "Model": "gpt-4",
        "MaxTokens": 2000
      },
      "AzureOpenAI": {
        "Enabled": false,
        "Endpoint": "",
        "ApiKey": "",
        "DeploymentName": ""
      }
    },

    "ApiVersioning": {
      "Enabled": true,
      "DefaultVersion": "1.0",
      "ReportApiVersions": true,
      "AssumeDefaultVersionWhenUnspecified": true
    },

    "RateLimiting": {
      "Enabled": true,
      "PermitLimit": 100,
      "WindowSeconds": 60,
      "QueueLimit": 10
    },

    "HealthChecks": {
      "Enabled": true,
      "Path": "/health",
      "UI": {
        "Enabled": true,
        "Path": "/health-ui"
      }
    },

    "Swagger": {
      "Enabled": true,
      "Title": "StarterKitMVC API",
      "Version": "v1",
      "Description": "SmartWorkz StarterKitMVC REST API",
      "ContactName": "SmartWorkz",
      "ContactEmail": "api@smartworkz.com"
    },

    "Localization": {
      "Enabled": true,
      "DefaultCulture": "en-US",
      "SupportedCultures": ["en-US", "es-ES", "fr-FR", "de-DE", "hi-IN"]
    },

    "Compression": {
      "Enabled": true,
      "EnableForHttps": true
    },

    "Cors": {
      "Enabled": true,
      "PolicyName": "DefaultPolicy",
      "AllowedOrigins": ["*"],
      "AllowedMethods": ["GET", "POST", "PUT", "DELETE", "OPTIONS"],
      "AllowedHeaders": ["*"],
      "AllowCredentials": false
    },

    "Security": {
      "Https": {
        "Enabled": true,
        "RedirectHttps": true,
        "UseHsts": true
      },
      "Antiforgery": {
        "Enabled": true,
        "HeaderName": "X-XSRF-TOKEN"
      },
      "ContentSecurityPolicy": {
        "Enabled": false
      }
    }
  },

  "App": {
    "Name": "StarterKitMVC",
    "Version": "1.0.0",
    "Environment": "Development",
    "BaseUrl": "https://localhost:5001",
    "SupportEmail": "support@smartworkz.com"
  }
}
