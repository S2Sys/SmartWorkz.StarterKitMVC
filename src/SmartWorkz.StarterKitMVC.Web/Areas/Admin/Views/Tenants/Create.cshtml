@model SmartWorkz.StarterKitMVC.Web.Areas.Admin.Models.TenantFormViewModel
@{
    ViewData["Title"] = "Create Tenant";
}

<form asp-action="Create" method="post">
    <div class="row">
        <div class="col-lg-8">
            <div class="card admin-card mb-4">
                <div class="card-header">
                    <i class="bi bi-building me-2"></i>Tenant Information
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label asp-for="TenantId" class="form-label">Tenant ID <span class="text-danger">*</span></label>
                            <input asp-for="TenantId" class="form-control" placeholder="e.g., acme-corp">
                            <span asp-validation-for="TenantId" class="text-danger"></span>
                            <small class="text-muted">Lowercase letters, numbers, and hyphens only</small>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Name" class="form-label">Name <span class="text-danger">*</span></label>
                            <input asp-for="Name" class="form-control" placeholder="e.g., Acme Corporation">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Subdomain" class="form-label">Subdomain</label>
                            <div class="input-group">
                                <input asp-for="Subdomain" class="form-control" placeholder="acme">
                                <span class="input-group-text">.example.com</span>
                            </div>
                            <span asp-validation-for="Subdomain" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Domain" class="form-label">Custom Domain</label>
                            <input asp-for="Domain" class="form-control" placeholder="e.g., app.acme.com">
                            <span asp-validation-for="Domain" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="ExpirationDate" class="form-label">Expiration Date</label>
                            <input asp-for="ExpirationDate" type="date" class="form-control">
                            <span asp-validation-for="ExpirationDate" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="MaxUsers" class="form-label">Max Users</label>
                            <input asp-for="MaxUsers" type="number" class="form-control" min="0">
                            <span asp-validation-for="MaxUsers" class="text-danger"></span>
                            <small class="text-muted">0 = unlimited</small>
                        </div>
                        <div class="col-12">
                            <div class="form-check form-switch">
                                <input asp-for="IsActive" class="form-check-input" type="checkbox" checked>
                                <label asp-for="IsActive" class="form-check-label">Active</label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card admin-card mb-4">
                <div class="card-header">
                    <i class="bi bi-database me-2"></i>Database Configuration
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label asp-for="DatabaseProvider" class="form-label">Database Provider</label>
                            <select asp-for="DatabaseProvider" class="form-select">
                                <option value="SqlServer">SQL Server</option>
                                <option value="PostgreSQL">PostgreSQL</option>
                                <option value="MySQL">MySQL</option>
                                <option value="SQLite">SQLite</option>
                            </select>
                        </div>
                        <div class="col-12">
                            <label asp-for="ConnectionString" class="form-label">Connection String</label>
                            <textarea asp-for="ConnectionString" class="form-control" rows="2" placeholder="Leave empty to use shared database"></textarea>
                            <span asp-validation-for="ConnectionString" class="text-danger"></span>
                            <small class="text-muted">Leave empty to use the default shared database</small>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card admin-card mb-4">
                <div class="card-header">
                    <i class="bi bi-palette me-2"></i>Branding
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-4">
                            <label asp-for="Branding.PrimaryColor" class="form-label">Primary Color</label>
                            <div class="input-group">
                                <input type="color" class="form-control form-control-color" asp-for="Branding.PrimaryColor">
                                <input type="text" class="form-control" asp-for="Branding.PrimaryColor">
                            </div>
                        </div>
                        <div class="col-md-4">
                            <label asp-for="Branding.SecondaryColor" class="form-label">Secondary Color</label>
                            <div class="input-group">
                                <input type="color" class="form-control form-control-color" asp-for="Branding.SecondaryColor">
                                <input type="text" class="form-control" asp-for="Branding.SecondaryColor">
                            </div>
                        </div>
                        <div class="col-md-4">
                            <label asp-for="Branding.AccentColor" class="form-label">Accent Color</label>
                            <div class="input-group">
                                <input type="color" class="form-control form-control-color" asp-for="Branding.AccentColor">
                                <input type="text" class="form-control" asp-for="Branding.AccentColor">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Branding.LogoUrl" class="form-label">Logo URL</label>
                            <input asp-for="Branding.LogoUrl" class="form-control" placeholder="https://...">
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Branding.FaviconUrl" class="form-label">Favicon URL</label>
                            <input asp-for="Branding.FaviconUrl" class="form-control" placeholder="https://...">
                        </div>
                        <div class="col-12">
                            <label asp-for="Branding.FooterText" class="form-label">Footer Text</label>
                            <input asp-for="Branding.FooterText" class="form-control" placeholder="Â© 2024 Company Name">
                        </div>
                    </div>
                </div>
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-check-lg me-1"></i>Create Tenant
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-x-lg me-1"></i>Cancel
                </a>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="card admin-card">
                <div class="card-header">
                    <i class="bi bi-info-circle me-2"></i>Help
                </div>
                <div class="card-body">
                    <h6>Creating a Tenant</h6>
                    <p class="text-muted small">Tenants are isolated environments for different organizations.</p>
                    <ul class="small text-muted">
                        <li><strong>Tenant ID</strong> - Unique identifier used in URLs and database</li>
                        <li><strong>Subdomain</strong> - Used for tenant-specific URLs</li>
                        <li><strong>Custom Domain</strong> - Optional custom domain mapping</li>
                        <li><strong>Max Users</strong> - Limit the number of users (0 = unlimited)</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
