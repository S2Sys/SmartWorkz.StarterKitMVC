@model List<SmartWorkz.StarterKitMVC.Web.Areas.Admin.Models.TenantListViewModel>
@{
    ViewData["Title"] = "Tenants";
}

@section PageActions {
    <a asp-action="Create" class="btn btn-primary btn-sm">
        <i class="bi bi-plus-lg me-1"></i>Add Tenant
    </a>
}

<!-- Stats -->
<div class="row g-4 mb-4">
    <div class="col-md-3">
        <div class="card admin-card stat-card primary">
            <div class="card-body py-3">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <div class="stat-value">@Model.Count</div>
                        <div class="stat-label">Total Tenants</div>
                    </div>
                    <div class="stat-icon"><i class="bi bi-building"></i></div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card admin-card stat-card success">
            <div class="card-body py-3">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <div class="stat-value">@Model.Count(t => t.IsActive)</div>
                        <div class="stat-label">Active</div>
                    </div>
                    <div class="stat-icon"><i class="bi bi-check-circle"></i></div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card admin-card stat-card warning">
            <div class="card-body py-3">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <div class="stat-value">@Model.Count(t => t.ExpirationDate.HasValue && t.ExpirationDate < DateTime.UtcNow.AddDays(30))</div>
                        <div class="stat-label">Expiring Soon</div>
                    </div>
                    <div class="stat-icon"><i class="bi bi-clock"></i></div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card admin-card stat-card info">
            <div class="card-body py-3">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <div class="stat-value">@Model.Sum(t => t.UserCount)</div>
                        <div class="stat-label">Total Users</div>
                    </div>
                    <div class="stat-icon"><i class="bi bi-people"></i></div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Tenants Table -->
<div class="card admin-card">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table admin-table mb-0">
                <thead>
                    <tr>
                        <th>Tenant</th>
                        <th>Subdomain</th>
                        <th>Users</th>
                        <th>Status</th>
                        <th>Expiration</th>
                        <th>Created</th>
                        <th style="width: 150px;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var tenant in Model)
                    {
                        <tr>
                            <td>
                                <div class="fw-medium">@tenant.Name</div>
                                <small class="text-muted">@tenant.Id</small>
                            </td>
                            <td>
                                @if (!string.IsNullOrEmpty(tenant.Subdomain))
                                {
                                    <code>@tenant.Subdomain</code>
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                                @if (!string.IsNullOrEmpty(tenant.Domain))
                                {
                                    <br><small class="text-muted">@tenant.Domain</small>
                                }
                            </td>
                            <td>
                                <span class="badge bg-secondary">@tenant.UserCount users</span>
                            </td>
                            <td>
                                @if (tenant.IsActive)
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Inactive</span>
                                }
                            </td>
                            <td>
                                @if (tenant.ExpirationDate.HasValue)
                                {
                                    var daysLeft = (tenant.ExpirationDate.Value - DateTime.UtcNow).Days;
                                    if (daysLeft < 0)
                                    {
                                        <span class="badge bg-danger">Expired</span>
                                    }
                                    else if (daysLeft < 30)
                                    {
                                        <span class="badge bg-warning">@daysLeft days left</span>
                                    }
                                    else
                                    {
                                        <span>@tenant.ExpirationDate.Value.ToString("MMM dd, yyyy")</span>
                                    }
                                }
                                else
                                {
                                    <span class="text-muted">Never</span>
                                }
                            </td>
                            <td>
                                <span title="@tenant.CreatedAt.ToString("yyyy-MM-dd HH:mm:ss")">
                                    @tenant.CreatedAt.ToString("MMM dd, yyyy")
                                </span>
                            </td>
                            <td>
                                <div class="btn-group btn-group-sm">
                                    <a asp-action="Details" asp-route-id="@tenant.Id" class="btn btn-outline-secondary" title="View">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@tenant.Id" class="btn btn-outline-secondary" title="Edit">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a asp-action="Branding" asp-route-id="@tenant.Id" class="btn btn-outline-secondary" title="Branding">
                                        <i class="bi bi-palette"></i>
                                    </a>
                                    <button type="button" class="btn btn-outline-danger" title="Delete"
                                            data-bs-toggle="modal" data-bs-target="#deleteModal"
                                            data-id="@tenant.Id" data-name="@tenant.Name">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Delete Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete tenant <strong id="deleteTenantName"></strong>?</p>
                <p class="text-danger mb-0"><small>This will delete all tenant data including users, settings, and content. This action cannot be undone.</small></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form asp-action="Delete" method="post" class="d-inline">
                    <input type="hidden" name="id" id="deleteTenantId">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script>
    document.getElementById('deleteModal')?.addEventListener('show.bs.modal', function(e) {
        const button = e.relatedTarget;
        document.getElementById('deleteTenantId').value = button.dataset.id;
        document.getElementById('deleteTenantName').textContent = button.dataset.name;
    });
</script>
}
