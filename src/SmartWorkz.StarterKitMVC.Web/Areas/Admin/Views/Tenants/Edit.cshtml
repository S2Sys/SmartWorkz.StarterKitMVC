@model SmartWorkz.StarterKitMVC.Web.Areas.Admin.Models.TenantFormViewModel
@{
    ViewData["Title"] = "Edit Tenant";
}

<form asp-action="Edit" asp-route-id="@Model.Id" method="post">
    <input type="hidden" asp-for="Id" />
    
    <div class="row">
        <div class="col-lg-8">
            <div class="card admin-card mb-4">
                <div class="card-header">
                    <i class="bi bi-building me-2"></i>Tenant Information
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label asp-for="TenantId" class="form-label">Tenant ID</label>
                            <input asp-for="TenantId" class="form-control" readonly>
                            <small class="text-muted">Tenant ID cannot be changed</small>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Name" class="form-label">Name <span class="text-danger">*</span></label>
                            <input asp-for="Name" class="form-control" placeholder="e.g., Acme Corporation">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Subdomain" class="form-label">Subdomain</label>
                            <div class="input-group">
                                <input asp-for="Subdomain" class="form-control" placeholder="acme">
                                <span class="input-group-text">.example.com</span>
                            </div>
                            <span asp-validation-for="Subdomain" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Domain" class="form-label">Custom Domain</label>
                            <input asp-for="Domain" class="form-control" placeholder="e.g., app.acme.com">
                            <span asp-validation-for="Domain" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="ExpirationDate" class="form-label">Expiration Date</label>
                            <input asp-for="ExpirationDate" type="date" class="form-control">
                            <span asp-validation-for="ExpirationDate" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="MaxUsers" class="form-label">Max Users</label>
                            <input asp-for="MaxUsers" type="number" class="form-control" min="0">
                            <span asp-validation-for="MaxUsers" class="text-danger"></span>
                            <small class="text-muted">0 = unlimited</small>
                        </div>
                        <div class="col-12">
                            <div class="form-check form-switch">
                                <input asp-for="IsActive" class="form-check-input" type="checkbox">
                                <label asp-for="IsActive" class="form-check-label">Active</label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card admin-card mb-4">
                <div class="card-header">
                    <i class="bi bi-database me-2"></i>Database Configuration
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label asp-for="DatabaseProvider" class="form-label">Database Provider</label>
                            <select asp-for="DatabaseProvider" class="form-select">
                                <option value="SqlServer">SQL Server</option>
                                <option value="PostgreSQL">PostgreSQL</option>
                                <option value="MySQL">MySQL</option>
                                <option value="SQLite">SQLite</option>
                            </select>
                        </div>
                        <div class="col-12">
                            <label asp-for="ConnectionString" class="form-label">Connection String</label>
                            <textarea asp-for="ConnectionString" class="form-control" rows="2" placeholder="Leave empty to use shared database"></textarea>
                            <span asp-validation-for="ConnectionString" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-check-lg me-1"></i>Save Changes
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-x-lg me-1"></i>Cancel
                </a>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="card admin-card mb-4">
                <div class="card-header">
                    <i class="bi bi-lightning me-2"></i>Quick Actions
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a asp-action="Branding" asp-route-id="@Model.Id" class="btn btn-outline-primary btn-sm">
                            <i class="bi bi-palette me-1"></i>Edit Branding
                        </a>
                        <a asp-action="Settings" asp-route-id="@Model.Id" class="btn btn-outline-primary btn-sm">
                            <i class="bi bi-gear me-1"></i>Tenant Settings
                        </a>
                        <a asp-controller="Identity" asp-action="Users" asp-route-tenantId="@Model.Id" class="btn btn-outline-primary btn-sm">
                            <i class="bi bi-people me-1"></i>Manage Users
                        </a>
                    </div>
                </div>
            </div>
            
            <div class="card admin-card">
                <div class="card-header">
                    <i class="bi bi-exclamation-triangle me-2"></i>Danger Zone
                </div>
                <div class="card-body">
                    <p class="small text-muted">Permanently delete this tenant and all associated data.</p>
                    <button type="button" class="btn btn-outline-danger btn-sm w-100" data-bs-toggle="modal" data-bs-target="#deleteModal">
                        <i class="bi bi-trash me-1"></i>Delete Tenant
                    </button>
                </div>
            </div>
        </div>
    </div>
</form>

<!-- Delete Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete tenant <strong>@Model.Name</strong>?</p>
                <p class="text-danger mb-0"><small>This will delete all tenant data including users, settings, and content. This action cannot be undone.</small></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form asp-action="Delete" method="post" class="d-inline">
                    <input type="hidden" name="id" value="@Model.Id">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
