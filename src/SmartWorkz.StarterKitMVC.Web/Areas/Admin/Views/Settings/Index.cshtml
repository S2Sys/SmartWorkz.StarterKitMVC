@model SmartWorkz.StarterKitMVC.Web.Areas.Admin.Models.SettingsPageViewModel
@{
    ViewData["Title"] = "Settings";
}

@section PageActions {
    <a asp-action="Categories" class="btn btn-outline-secondary btn-sm me-2">
        <i class="bi bi-folder me-1"></i>Manage Categories
    </a>
    <a asp-action="DefinitionCreate" class="btn btn-primary btn-sm">
        <i class="bi bi-plus-lg me-1"></i>Add Setting
    </a>
}

<div class="row">
    <!-- Categories Sidebar -->
    <div class="col-lg-3 mb-4">
        <div class="card admin-card">
            <div class="card-header">
                <i class="bi bi-folder me-2"></i>Categories
            </div>
            <div class="list-group list-group-flush">
                @foreach (var category in Model.Categories)
                {
                    <a asp-action="Index" asp-route-category="@category.Key" 
                       class="list-group-item list-group-item-action d-flex align-items-center @(Model.ActiveCategoryKey == category.Key ? "active" : "")">
                        <i class="@category.Icon me-2"></i>
                        <span>@category.Name</span>
                        <span class="badge bg-secondary ms-auto">@category.Settings.Count</span>
                    </a>
                }
            </div>
        </div>
    </div>

    <!-- Settings Form -->
    <div class="col-lg-9">
        @{
            var activeCategory = Model.Categories.FirstOrDefault(c => c.Key == Model.ActiveCategoryKey);
        }
        @if (activeCategory != null)
        {
            <form asp-action="SaveSettings" method="post">
                <input type="hidden" name="CategoryKey" value="@activeCategory.Key" />
                
                <div class="card admin-card mb-4">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <span>
                            <i class="@activeCategory.Icon me-2"></i>@activeCategory.Name
                        </span>
                        <small class="text-muted">@activeCategory.Description</small>
                    </div>
                    <div class="card-body">
                        <div class="row g-4">
                            @foreach (var setting in activeCategory.Settings)
                            {
                                <div class="col-md-6">
                                    <label class="form-label">
                                        @setting.Name
                                        @if (setting.IsRequired)
                                        {
                                            <span class="text-danger">*</span>
                                        }
                                        @if (setting.IsEncrypted)
                                        {
                                            <i class="bi bi-lock text-muted ms-1" title="Encrypted"></i>
                                        }
                                    </label>
                                    
                                    @switch (setting.ValueType)
                                    {
                                        case "Bool":
                                            <div class="form-check form-switch">
                                                <input type="checkbox" class="form-check-input" 
                                                       name="Settings[@setting.Key]" 
                                                       value="true"
                                                       @(setting.CurrentValue?.ToLower() == "true" ? "checked" : "")>
                                            </div>
                                            break;
                                        case "Int":
                                            <input type="number" class="form-control" 
                                                   name="Settings[@setting.Key]" 
                                                   value="@setting.CurrentValue"
                                                   min="@setting.MinValue" max="@setting.MaxValue">
                                            break;
                                        default:
                                            if (setting.Options.Any())
                                            {
                                                <select class="form-select" name="Settings[@setting.Key]">
                                                    @foreach (var option in setting.Options)
                                                    {
                                                        <option value="@option.Value" selected="@(setting.CurrentValue == option.Value)">@option.Label</option>
                                                    }
                                                </select>
                                            }
                                            else if (setting.IsEncrypted)
                                            {
                                                <input type="password" class="form-control" 
                                                       name="Settings[@setting.Key]" 
                                                       value="@setting.CurrentValue"
                                                       placeholder="Enter value (leave empty to keep current)">
                                            }
                                            else
                                            {
                                                <input type="text" class="form-control" 
                                                       name="Settings[@setting.Key]" 
                                                       value="@setting.CurrentValue">
                                            }
                                            break;
                                    }
                                    
                                    @if (!string.IsNullOrEmpty(setting.Description))
                                    {
                                        <small class="text-muted">@setting.Description</small>
                                    }
                                </div>
                            }
                        </div>
                    </div>
                    <div class="card-footer">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-lg me-1"></i>Save Settings
                        </button>
                        <button type="reset" class="btn btn-secondary">
                            <i class="bi bi-arrow-counterclockwise me-1"></i>Reset
                        </button>
                    </div>
                </div>
            </form>
        }
    </div>
</div>
