@{
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString() ?? "";
    var currentAction = ViewContext.RouteData.Values["action"]?.ToString() ?? "";
}
<!DOCTYPE html>
<html lang="en" data-bs-theme="light">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="SmartWorkz StarterKitMVC Admin Panel" />
    <title>@ViewData["Title"] - Admin | StarterKitMVC</title>
    
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet" />
    
    <!-- Bootstrap 5.3.3 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" rel="stylesheet" />
    
    <!-- Admin Styles -->
    <link href="~/css/admin.css" rel="stylesheet" asp-append-version="true" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body class="admin-body">
    <!-- Sidebar -->
    <aside class="admin-sidebar" id="adminSidebar">
        <div class="sidebar-header">
            <a asp-area="" asp-controller="Home" asp-action="Index" class="sidebar-brand">
                <i class="bi bi-lightning-charge-fill text-warning"></i>
                <span>StarterKit</span>
            </a>
            <button class="btn btn-link sidebar-toggle d-lg-none" id="sidebarClose">
                <i class="bi bi-x-lg"></i>
            </button>
        </div>
        
        <div class="sidebar-user">
            <div class="user-avatar">
                <i class="bi bi-person-circle"></i>
            </div>
            <div class="user-info">
                <span class="user-name">Admin User</span>
                <span class="user-role">Administrator</span>
            </div>
        </div>
        
        <nav class="sidebar-nav">
            <div class="nav-section">
                <span class="nav-section-title">Main</span>
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link @(currentController == "Dashboard" ? "active" : "")" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">
                            <i class="bi bi-speedometer2"></i>
                            <span>Dashboard</span>
                        </a>
                    </li>
                </ul>
            </div>
            
            <div class="nav-section">
                <span class="nav-section-title">Management</span>
                <ul class="nav flex-column">
                    <!-- Identity with submenu -->
                    <li class="nav-item">
                        <a class="nav-link @(currentController == "Identity" ? "active" : "")" data-bs-toggle="collapse" href="#identityMenu" role="button" aria-expanded="@(currentController == "Identity" ? "true" : "false")">
                            <i class="bi bi-people"></i>
                            <span>Identity</span>
                        </a>
                        <div class="collapse @(currentController == "Identity" ? "show" : "")" id="identityMenu">
                            <ul class="nav flex-column">
                                <li class="nav-item">
                                    <a class="nav-link @(currentAction == "Users" ? "active" : "")" asp-area="Admin" asp-controller="Identity" asp-action="Users">
                                        <i class="bi bi-person"></i>
                                        <span>Users</span>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link @(currentAction == "Roles" ? "active" : "")" asp-area="Admin" asp-controller="Identity" asp-action="Roles">
                                        <i class="bi bi-shield"></i>
                                        <span>Roles</span>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link @(currentAction == "Claims" ? "active" : "")" asp-area="Admin" asp-controller="Identity" asp-action="Claims">
                                        <i class="bi bi-key"></i>
                                        <span>Claims</span>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(currentController == "Tenants" ? "active" : "")" asp-area="Admin" asp-controller="Tenants" asp-action="Index">
                            <i class="bi bi-building"></i>
                            <span>Tenants</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(currentController == "Lov" ? "active" : "")" asp-area="Admin" asp-controller="Lov" asp-action="Index">
                            <i class="bi bi-list-ul"></i>
                            <span>List of Values</span>
                        </a>
                    </li>
                </ul>
            </div>
            
            <div class="nav-section">
                <span class="nav-section-title">System</span>
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link @(currentController == "Settings" ? "active" : "")" asp-area="Admin" asp-controller="Settings" asp-action="Index">
                            <i class="bi bi-gear"></i>
                            <span>Settings</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(currentController == "Notifications" ? "active" : "")" asp-area="Admin" asp-controller="Notifications" asp-action="Index">
                            <i class="bi bi-bell"></i>
                            <span>Notifications</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(currentController == "Theme" ? "active" : "")" asp-area="Admin" asp-controller="Theme" asp-action="Index">
                            <i class="bi bi-palette"></i>
                            <span>Theme</span>
                        </a>
                    </li>
                </ul>
            </div>
            
            <div class="nav-section">
                <span class="nav-section-title">Resources</span>
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link @(currentController == "Wiki" ? "active" : "")" data-bs-toggle="collapse" href="#wikiMenu" role="button" aria-expanded="@(currentController == "Wiki" ? "true" : "false")">
                            <i class="bi bi-book"></i>
                            <span>Documentation</span>
                        </a>
                        <div class="collapse @(currentController == "Wiki" ? "show" : "")" id="wikiMenu">
                            <ul class="nav flex-column">
                                <li class="nav-item">
                                    <a class="nav-link @(currentAction == "Index" && currentController == "Wiki" ? "active" : "")" asp-area="Admin" asp-controller="Wiki" asp-action="Index">
                                        <i class="bi bi-house"></i>
                                        <span>Overview</span>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link @(currentAction == "GettingStarted" ? "active" : "")" asp-area="Admin" asp-controller="Wiki" asp-action="GettingStarted">
                                        <i class="bi bi-rocket-takeoff"></i>
                                        <span>Getting Started</span>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link @(currentAction == "Configuration" ? "active" : "")" asp-area="Admin" asp-controller="Wiki" asp-action="Configuration">
                                        <i class="bi bi-gear"></i>
                                        <span>Configuration</span>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link @(currentAction == "Architecture" ? "active" : "")" asp-area="Admin" asp-controller="Wiki" asp-action="Architecture">
                                        <i class="bi bi-diagram-3"></i>
                                        <span>Architecture</span>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link @(currentAction == "Database" ? "active" : "")" asp-area="Admin" asp-controller="Wiki" asp-action="Database">
                                        <i class="bi bi-database"></i>
                                        <span>Database</span>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link @(currentAction == "Security" ? "active" : "")" asp-area="Admin" asp-controller="Wiki" asp-action="Security">
                                        <i class="bi bi-shield-lock"></i>
                                        <span>Security</span>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link @(currentAction == "Api" ? "active" : "")" asp-area="Admin" asp-controller="Wiki" asp-action="Api">
                                        <i class="bi bi-braces"></i>
                                        <span>API Reference</span>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </li>
                </ul>
            </div>
        </nav>
        
        <div class="sidebar-footer">
            <a asp-area="" asp-controller="Home" asp-action="Index" class="btn btn-outline-light btn-sm w-100">
                <i class="bi bi-box-arrow-left me-2"></i>Back to Site
            </a>
        </div>
    </aside>
    
    <!-- Main Content Wrapper -->
    <div class="admin-wrapper">
        <!-- Top Navbar -->
        <header class="admin-header">
            <div class="header-left">
                <button class="btn btn-link sidebar-toggle" id="sidebarToggle">
                    <i class="bi bi-list fs-4"></i>
                </button>
                <nav aria-label="breadcrumb" class="d-none d-md-block">
                    <ol class="breadcrumb mb-0">
                        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Admin</a></li>
                        <li class="breadcrumb-item active">@ViewData["Title"]</li>
                    </ol>
                </nav>
            </div>
            
            <div class="header-right">
                <!-- Search -->
                <div class="header-search d-none d-md-block">
                    <div class="input-group input-group-sm">
                        <input type="text" class="form-control" placeholder="Search..." />
                        <button class="btn btn-outline-secondary" type="button">
                            <i class="bi bi-search"></i>
                        </button>
                    </div>
                </div>
                
                <!-- Theme Toggle -->
                <button class="btn btn-link header-icon" id="themeToggle" title="Toggle theme">
                    <i class="bi bi-moon-stars" id="themeIcon"></i>
                </button>
                
                <!-- Notifications -->
                <div class="dropdown">
                    <button class="btn btn-link header-icon position-relative" data-bs-toggle="dropdown">
                        <i class="bi bi-bell"></i>
                        <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                            3
                        </span>
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end notification-dropdown">
                        <li class="dropdown-header">Notifications</li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item" href="#"><i class="bi bi-info-circle text-info me-2"></i>New user registered</a></li>
                        <li><a class="dropdown-item" href="#"><i class="bi bi-check-circle text-success me-2"></i>Task completed</a></li>
                        <li><a class="dropdown-item" href="#"><i class="bi bi-exclamation-triangle text-warning me-2"></i>Server warning</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item text-center" asp-area="Admin" asp-controller="Notifications" asp-action="Index">View all</a></li>
                    </ul>
                </div>
                
                <!-- User Menu -->
                <div class="dropdown">
                    <button class="btn btn-link header-user" data-bs-toggle="dropdown">
                        <div class="user-avatar-sm">
                            <i class="bi bi-person-fill"></i>
                        </div>
                        <span class="d-none d-md-inline">Admin</span>
                        <i class="bi bi-chevron-down ms-1"></i>
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li class="dropdown-header">Welcome, Admin!</li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item" href="#"><i class="bi bi-person me-2"></i>Profile</a></li>
                        <li><a class="dropdown-item" asp-area="Admin" asp-controller="Settings" asp-action="Index"><i class="bi bi-gear me-2"></i>Settings</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item text-danger" href="#"><i class="bi bi-box-arrow-right me-2"></i>Logout</a></li>
                    </ul>
                </div>
            </div>
        </header>
        
        <!-- Page Content -->
        <main class="admin-content">
            <!-- Page Header -->
            <div class="content-header">
                <div class="container-fluid">
                    <div class="row align-items-center">
                        <div class="col-auto">
                            <h1 class="content-title">@ViewData["Title"]</h1>
                        </div>
                        <div class="col-auto ms-auto">
                            @await RenderSectionAsync("PageActions", required: false)
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Main Content -->
            <div class="container-fluid">
                @RenderBody()
            </div>
        </main>
        
        <!-- Footer -->
        <footer class="admin-footer">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-6">
                        <span>&copy; @DateTime.UtcNow.Year <strong>SmartWorkz StarterKitMVC</strong>. All rights reserved.</span>
                    </div>
                    <div class="col-md-6 text-md-end">
                        <span>Version 1.0.0</span>
                    </div>
                </div>
            </div>
        </footer>
    </div>
    
    <!-- Overlay for mobile sidebar -->
    <div class="sidebar-overlay" id="sidebarOverlay"></div>
    
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- Admin JS -->
    <script src="~/js/admin.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
