@{
    ViewData["Title"] = "Getting Started";
}

<div class="row">
    <div class="col-lg-9">
        <!-- Prerequisites -->
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0"><i class="bi bi-check2-square me-2"></i>Prerequisites</h5>
            </div>
            <div class="card-body">
                <p>Before you begin, ensure you have the following installed:</p>
                <div class="row g-3">
                    <div class="col-md-6">
                        <div class="d-flex align-items-center p-3 bg-light rounded">
                            <i class="bi bi-check-circle-fill text-success fs-4 me-3"></i>
                            <div>
                                <strong>.NET 9.0 SDK</strong>
                                <br><small class="text-muted">Required for building and running</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="d-flex align-items-center p-3 bg-light rounded">
                            <i class="bi bi-check-circle-fill text-success fs-4 me-3"></i>
                            <div>
                                <strong>SQL Server / LocalDB</strong>
                                <br><small class="text-muted">Database server</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="d-flex align-items-center p-3 bg-light rounded">
                            <i class="bi bi-check-circle-fill text-success fs-4 me-3"></i>
                            <div>
                                <strong>Visual Studio 2022 / VS Code</strong>
                                <br><small class="text-muted">IDE with C# support</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="d-flex align-items-center p-3 bg-light rounded">
                            <i class="bi bi-check-circle-fill text-success fs-4 me-3"></i>
                            <div>
                                <strong>Git</strong>
                                <br><small class="text-muted">Version control</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Quick Start -->
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0"><i class="bi bi-lightning-charge me-2"></i>Quick Start</h5>
            </div>
            <div class="card-body">
                <div class="step mb-4">
                    <div class="d-flex align-items-center mb-2">
                        <span class="badge bg-primary rounded-pill me-2">1</span>
                        <h6 class="mb-0">Clone the Repository</h6>
                    </div>
                    <pre class="bg-dark text-light p-3 rounded"><code>git clone https://github.com/S2Sys/SmartWorkz.StarterKitMVC.git
cd SmartWorkz.StarterKitMVC</code></pre>
                </div>

                <div class="step mb-4">
                    <div class="d-flex align-items-center mb-2">
                        <span class="badge bg-primary rounded-pill me-2">2</span>
                        <h6 class="mb-0">Rename Project (Optional)</h6>
                    </div>
                    <p class="text-muted">Use the rename script to customize the project name:</p>
                    <pre class="bg-dark text-light p-3 rounded"><code># PowerShell
.\rename-project.ps1 -NewName "YourProjectName" -NewNamespace "YourCompany.YourProject"</code></pre>
                </div>

                <div class="step mb-4">
                    <div class="d-flex align-items-center mb-2">
                        <span class="badge bg-primary rounded-pill me-2">3</span>
                        <h6 class="mb-0">Configure Database Connection</h6>
                    </div>
                    <p class="text-muted">Update the connection string in <code>appsettings.json</code>:</p>
                    <pre class="bg-dark text-light p-3 rounded"><code>{
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=StarterKitMVC;Trusted_Connection=True;"
  }
}</code></pre>
                </div>

                <div class="step mb-4">
                    <div class="d-flex align-items-center mb-2">
                        <span class="badge bg-primary rounded-pill me-2">4</span>
                        <h6 class="mb-0">Run Database Migrations</h6>
                    </div>
                    <pre class="bg-dark text-light p-3 rounded"><code>dotnet ef database update --project src/SmartWorkz.StarterKitMVC.Infrastructure</code></pre>
                </div>

                <div class="step mb-4">
                    <div class="d-flex align-items-center mb-2">
                        <span class="badge bg-primary rounded-pill me-2">5</span>
                        <h6 class="mb-0">Run the Application</h6>
                    </div>
                    <pre class="bg-dark text-light p-3 rounded"><code>cd src/SmartWorkz.StarterKitMVC.Web
dotnet run</code></pre>
                    <p class="text-muted mt-2">
                        <i class="bi bi-info-circle me-1"></i>
                        The application will be available at <code>https://localhost:7032</code>
                    </p>
                </div>
            </div>
        </div>

        <!-- Project Structure -->
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0"><i class="bi bi-folder2-open me-2"></i>Project Structure</h5>
            </div>
            <div class="card-body">
                <pre class="bg-light p-3 rounded" style="font-size: 0.85rem;"><code>SmartWorkz.StarterKitMVC/
├── src/
│   ├── SmartWorkz.StarterKitMVC.Web/           # ASP.NET Core MVC Web App
│   │   ├── Areas/Admin/                        # Admin panel area
│   │   ├── Controllers/                        # Public controllers
│   │   ├── Views/                              # Razor views
│   │   └── wwwroot/                            # Static files (CSS, JS)
│   │
│   ├── SmartWorkz.StarterKitMVC.Application/   # Application layer
│   │   ├── Abstractions/                       # Interfaces
│   │   ├── DTOs/                               # Data transfer objects
│   │   └── Services/                           # Business logic
│   │
│   ├── SmartWorkz.StarterKitMVC.Domain/        # Domain layer
│   │   ├── Entities/                           # Domain entities
│   │   └── ValueObjects/                       # Value objects
│   │
│   ├── SmartWorkz.StarterKitMVC.Infrastructure/# Infrastructure layer
│   │   ├── Data/                               # EF Core DbContext
│   │   ├── Repositories/                       # Data access
│   │   └── Services/                           # External services
│   │
│   └── SmartWorkz.StarterKitMVC.Shared/        # Shared utilities
│       ├── Extensions/                         # Extension methods
│       └── Primitives/                         # Base classes
│
├── tests/                                      # Unit & integration tests
├── tools/                                      # Development tools
└── docs/                                       # Documentation</code></pre>
            </div>
        </div>

        <!-- Next Steps -->
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0"><i class="bi bi-arrow-right-circle me-2"></i>Next Steps</h5>
            </div>
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-md-6">
                        <a asp-action="Configuration" class="text-decoration-none">
                            <div class="d-flex align-items-center p-3 border rounded hover-lift">
                                <i class="bi bi-gear fs-3 text-primary me-3"></i>
                                <div>
                                    <strong>Configure Settings</strong>
                                    <br><small class="text-muted">Set up environment variables</small>
                                </div>
                            </div>
                        </a>
                    </div>
                    <div class="col-md-6">
                        <a asp-action="Database" class="text-decoration-none">
                            <div class="d-flex align-items-center p-3 border rounded hover-lift">
                                <i class="bi bi-database fs-3 text-warning me-3"></i>
                                <div>
                                    <strong>Database Setup</strong>
                                    <br><small class="text-muted">Configure your database</small>
                                </div>
                            </div>
                        </a>
                    </div>
                    <div class="col-md-6">
                        <a asp-action="Security" class="text-decoration-none">
                            <div class="d-flex align-items-center p-3 border rounded hover-lift">
                                <i class="bi bi-shield-lock fs-3 text-danger me-3"></i>
                                <div>
                                    <strong>Security Setup</strong>
                                    <br><small class="text-muted">Configure authentication</small>
                                </div>
                            </div>
                        </a>
                    </div>
                    <div class="col-md-6">
                        <a asp-action="Architecture" class="text-decoration-none">
                            <div class="d-flex align-items-center p-3 border rounded hover-lift">
                                <i class="bi bi-diagram-3 fs-3 text-info me-3"></i>
                                <div>
                                    <strong>Learn Architecture</strong>
                                    <br><small class="text-muted">Understand the design</small>
                                </div>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Sidebar -->
    <div class="col-lg-3">
        <div class="card sticky-top" style="top: 20px;">
            <div class="card-header">
                <h6 class="mb-0"><i class="bi bi-list-ul me-2"></i>On This Page</h6>
            </div>
            <div class="card-body">
                <nav class="nav flex-column">
                    <a class="nav-link px-0" href="#prerequisites">Prerequisites</a>
                    <a class="nav-link px-0" href="#quick-start">Quick Start</a>
                    <a class="nav-link px-0" href="#project-structure">Project Structure</a>
                    <a class="nav-link px-0" href="#next-steps">Next Steps</a>
                </nav>
            </div>
        </div>
    </div>
</div>

@section Styles {
<style>
    .hover-lift {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }
    .hover-lift:hover {
        transform: translateY(-3px);
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
    }
    pre code {
        font-family: 'Fira Code', 'Consolas', monospace;
    }
</style>
}
