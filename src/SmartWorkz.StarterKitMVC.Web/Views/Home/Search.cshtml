@{
    ViewData["Title"] = "Search Results";
    var query = ViewBag.Query as string ?? "";
}

<!-- Search Header -->
<section class="bg-dark text-white py-5">
    <div class="container py-4">
        <div class="row justify-content-center">
            <div class="col-lg-8 text-center">
                <h1 class="display-5 fw-bold mb-4">Search</h1>
                <form asp-action="Search" method="get">
                    <div class="input-group input-group-lg shadow">
                        <span class="input-group-text bg-white border-0">
                            <i class="bi bi-search text-muted"></i>
                        </span>
                        <input type="search" name="q" class="form-control border-0" 
                               placeholder="What are you looking for?" value="@query" autofocus>
                        <button type="submit" class="btn btn-warning px-4">Search</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

<section class="py-5">
    <div class="container py-4">
        @if (!string.IsNullOrEmpty(query))
        {
            <div class="mb-4">
                <p class="text-muted">
                    Showing results for: <strong>"@query"</strong>
                </p>
            </div>
            
            <!-- Sample Search Results -->
            <div class="row g-4">
                <div class="col-12">
                    <div class="card border-0 shadow-sm hover-lift">
                        <div class="card-body p-4">
                            <div class="d-flex align-items-start">
                                <div class="bg-primary bg-opacity-10 rounded p-3 me-3">
                                    <i class="bi bi-file-text text-primary fs-4"></i>
                                </div>
                                <div class="flex-grow-1">
                                    <h5 class="fw-bold mb-1">
                                        <a asp-action="Features" class="text-decoration-none">Features Overview</a>
                                    </h5>
                                    <p class="text-muted mb-2">Discover all the powerful features included in StarterKitMVC including authentication, multi-tenancy, and more.</p>
                                    <small class="text-success">
                                        <i class="bi bi-link-45deg me-1"></i>/Home/Features
                                    </small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="col-12">
                    <div class="card border-0 shadow-sm hover-lift">
                        <div class="card-body p-4">
                            <div class="d-flex align-items-start">
                                <div class="bg-success bg-opacity-10 rounded p-3 me-3">
                                    <i class="bi bi-book text-success fs-4"></i>
                                </div>
                                <div class="flex-grow-1">
                                    <h5 class="fw-bold mb-1">
                                        <a href="#" class="text-decoration-none">Documentation</a>
                                    </h5>
                                    <p class="text-muted mb-2">Complete documentation covering setup, configuration, and customization of the starter kit.</p>
                                    <small class="text-success">
                                        <i class="bi bi-link-45deg me-1"></i>/docs
                                    </small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="col-12">
                    <div class="card border-0 shadow-sm hover-lift">
                        <div class="card-body p-4">
                            <div class="d-flex align-items-start">
                                <div class="bg-warning bg-opacity-10 rounded p-3 me-3">
                                    <i class="bi bi-speedometer2 text-warning fs-4"></i>
                                </div>
                                <div class="flex-grow-1">
                                    <h5 class="fw-bold mb-1">
                                        <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index" class="text-decoration-none">Admin Dashboard</a>
                                    </h5>
                                    <p class="text-muted mb-2">Access the admin panel to manage users, tenants, settings, and more.</p>
                                    <small class="text-success">
                                        <i class="bi bi-link-45deg me-1"></i>/Admin/Dashboard
                                    </small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Pagination -->
            <nav class="mt-5">
                <ul class="pagination justify-content-center">
                    <li class="page-item disabled">
                        <a class="page-link" href="#"><i class="bi bi-chevron-left"></i></a>
                    </li>
                    <li class="page-item active"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item">
                        <a class="page-link" href="#"><i class="bi bi-chevron-right"></i></a>
                    </li>
                </ul>
            </nav>
        }
        else
        {
            <!-- No Query -->
            <div class="text-center py-5">
                <div class="bg-light rounded-circle d-inline-flex align-items-center justify-content-center mb-4" style="width: 120px; height: 120px;">
                    <i class="bi bi-search text-muted" style="font-size: 3rem;"></i>
                </div>
                <h4 class="fw-bold mb-3">Start Your Search</h4>
                <p class="text-muted mb-4">Enter a search term above to find what you're looking for.</p>
                
                <!-- Popular Searches -->
                <div class="mt-4">
                    <p class="text-muted mb-3">Popular searches:</p>
                    <div class="d-flex flex-wrap justify-content-center gap-2">
                        <a asp-action="Search" asp-route-q="features" class="btn btn-outline-primary btn-sm">Features</a>
                        <a asp-action="Search" asp-route-q="authentication" class="btn btn-outline-primary btn-sm">Authentication</a>
                        <a asp-action="Search" asp-route-q="multi-tenancy" class="btn btn-outline-primary btn-sm">Multi-Tenancy</a>
                        <a asp-action="Search" asp-route-q="settings" class="btn btn-outline-primary btn-sm">Settings</a>
                        <a asp-action="Search" asp-route-q="admin" class="btn btn-outline-primary btn-sm">Admin Panel</a>
                    </div>
                </div>
            </div>
        }
    </div>
</section>

@section Styles {
<style>
.hover-lift {
    transition: transform 0.3s ease, box-shadow 0.3s ease;
}
.hover-lift:hover {
    transform: translateY(-3px);
    box-shadow: 0 10px 30px rgba(0,0,0,0.1) !important;
}
</style>
}
