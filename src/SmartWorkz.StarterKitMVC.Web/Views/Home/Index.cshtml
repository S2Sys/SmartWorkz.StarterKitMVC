@{
    ViewData["Title"] = "Welcome";
    Layout = "_Layout";
}

<!-- Hero Section -->
<section class="bg-gradient-primary text-white py-5">
    <div class="container py-5">
        <div class="row align-items-center g-5">
            <div class="col-lg-6">
                <h1 class="display-4 fw-bold mb-3">
                    <i class="bi bi-lightning-charge-fill me-2"></i>StarterKitMVC
                </h1>
                <p class="lead mb-4">Enterprise-grade ASP.NET Core MVC boilerplate with clean architecture.</p>
                <div class="d-flex flex-column flex-sm-row gap-3">
                    <a href="#features" class="btn btn-light btn-lg"><i class="bi bi-arrow-down-circle me-2"></i>Features</a>
                    <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index" class="btn btn-outline-light btn-lg">
                        <i class="bi bi-speedometer2 me-2"></i>Admin
                    </a>
                </div>
            </div>
            <div class="col-lg-6 text-center">
                <div class="bg-white bg-opacity-10 rounded-4 p-4">
                    <i class="bi bi-code-slash display-1"></i>
                    <div class="mt-3">
                        <span class="badge bg-light text-primary me-2">.NET 9</span>
                        <span class="badge bg-light text-primary me-2">Bootstrap 5.3</span>
                        <span class="badge bg-light text-primary">SQL Server</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Features Section -->
<section id="features" class="py-5">
    <div class="container py-4">
        <div class="text-center mb-5">
            <h2 class="fw-bold">Powerful Features</h2>
            <p class="text-muted">Everything you need to build enterprise applications</p>
        </div>
        <div class="row g-4">
            <div class="col-md-6 col-lg-4">
                <div class="card h-100 hover-lift">
                    <div class="card-body text-center p-4">
                        <div class="bg-primary bg-opacity-10 rounded-circle d-inline-flex p-3 mb-3">
                            <i class="bi bi-layers fs-3 text-primary"></i>
                        </div>
                        <h5 class="card-title">Clean Architecture</h5>
                        <p class="card-text text-muted">Layered architecture with Domain, Application, Infrastructure, and Web projects.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg-4">
                <div class="card h-100 hover-lift">
                    <div class="card-body text-center p-4">
                        <div class="bg-success bg-opacity-10 rounded-circle d-inline-flex p-3 mb-3">
                            <i class="bi bi-shield-check fs-3 text-success"></i>
                        </div>
                        <h5 class="card-title">Identity Ready</h5>
                        <p class="card-text text-muted">Built-in authentication with roles, claims, and permissions.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg-4">
                <div class="card h-100 hover-lift">
                    <div class="card-body text-center p-4">
                        <div class="bg-info bg-opacity-10 rounded-circle d-inline-flex p-3 mb-3">
                            <i class="bi bi-building fs-3 text-info"></i>
                        </div>
                        <h5 class="card-title">Multi-Tenancy</h5>
                        <p class="card-text text-muted">Tenant isolation, branding, and feature flags support.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg-4">
                <div class="card h-100 hover-lift">
                    <div class="card-body text-center p-4">
                        <div class="bg-warning bg-opacity-10 rounded-circle d-inline-flex p-3 mb-3">
                            <i class="bi bi-gear fs-3 text-warning"></i>
                        </div>
                        <h5 class="card-title">Settings System</h5>
                        <p class="card-text text-muted">Hierarchical settings with System, Tenant, and User scopes.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg-4">
                <div class="card h-100 hover-lift">
                    <div class="card-body text-center p-4">
                        <div class="bg-danger bg-opacity-10 rounded-circle d-inline-flex p-3 mb-3">
                            <i class="bi bi-broadcast fs-3 text-danger"></i>
                        </div>
                        <h5 class="card-title">Event Bus</h5>
                        <p class="card-text text-muted">Publish/subscribe events for decoupled communication.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg-4">
                <div class="card h-100 hover-lift">
                    <div class="card-body text-center p-4">
                        <div class="bg-secondary bg-opacity-10 rounded-circle d-inline-flex p-3 mb-3">
                            <i class="bi bi-cloud fs-3 text-secondary"></i>
                        </div>
                        <h5 class="card-title">DevOps Ready</h5>
                        <p class="card-text text-muted">Docker, Kubernetes, CI/CD pipelines included.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- CTA Section -->
<section class="bg-light py-5">
    <div class="container text-center py-4">
        <h3 class="fw-bold mb-3">Ready to Get Started?</h3>
        <p class="text-muted mb-4">Clone, rename, and start building your enterprise application.</p>
        <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index" class="btn btn-primary btn-lg">
            <i class="bi bi-rocket-takeoff me-2"></i>Launch Admin Panel
        </a>
    </div>
</section>
