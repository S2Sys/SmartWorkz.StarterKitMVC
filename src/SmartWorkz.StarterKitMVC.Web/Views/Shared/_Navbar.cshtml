@* Navbar Partial - Modern Clean Navigation *@
@{
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString() ?? "";
    var currentAction = ViewContext.RouteData.Values["action"]?.ToString() ?? "";
}
<nav class="navbar navbar-expand-lg navbar-dark sticky-top" id="mainNav">
    <div class="container">
        <a class="navbar-brand fw-bold d-flex align-items-center" asp-controller="Home" asp-action="Index">
            <i class="bi bi-lightning-charge-fill fs-4 me-2 text-warning"></i>
            <span>StarterKit<span class="text-warning">MVC</span></span>
        </a>
        <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar" 
                aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="mainNavbar">
            <ul class="navbar-nav mx-auto mb-2 mb-lg-0">
                <li class="nav-item">
                    <a class="nav-link @(currentAction == "Index" && currentController == "Home" ? "active" : "")" asp-controller="Home" asp-action="Index">
                        <i class="bi bi-house me-1"></i>Home
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(currentAction == "About" ? "active" : "")" asp-controller="Home" asp-action="About">
                        <i class="bi bi-info-circle me-1"></i>About
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(currentAction == "Features" ? "active" : "")" asp-controller="Home" asp-action="Features">
                        <i class="bi bi-star me-1"></i>Features
                    </a>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="bi bi-file-earmark me-1"></i>Pages
                    </a>
                    <ul class="dropdown-menu dropdown-menu-dark">
                        <li><a class="dropdown-item" asp-controller="Home" asp-action="Privacy"><i class="bi bi-shield-check me-2"></i>Privacy Policy</a></li>
                        <li><a class="dropdown-item" asp-controller="Home" asp-action="Terms"><i class="bi bi-file-text me-2"></i>Terms of Service</a></li>
                        <li><a class="dropdown-item" asp-controller="Home" asp-action="Search"><i class="bi bi-search me-2"></i>Search</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item" asp-area="Admin" asp-controller="Dashboard" asp-action="Index"><i class="bi bi-speedometer2 me-2"></i>Admin Panel</a></li>
                    </ul>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(currentAction == "Contact" ? "active" : "")" asp-controller="Home" asp-action="Contact">
                        <i class="bi bi-envelope me-1"></i>Contact
                    </a>
                </li>
            </ul>
            
            <!-- Search Form -->
            <form class="d-flex me-3 d-none d-lg-flex" asp-controller="Home" asp-action="Search" method="get">
                <div class="input-group input-group-sm">
                    <input class="form-control bg-dark border-secondary text-white" type="search" name="q"
                           placeholder="Search..." aria-label="Search" style="min-width: 120px;">
                    <button class="btn btn-outline-light btn-sm" type="submit">
                        <i class="bi bi-search"></i>
                    </button>
                </div>
            </form>
            
            <!-- Theme Toggle -->
            <button class="btn btn-outline-light btn-sm rounded-circle me-2 d-flex align-items-center justify-content-center" 
                    id="themeToggle" title="Toggle theme" style="width: 38px; height: 38px;">
                <i class="bi bi-moon-stars fs-5" id="themeIcon"></i>
            </button>
            
            <!-- Auth Buttons -->
            <div class="d-flex gap-2">
                <a asp-controller="Account" asp-action="Login" class="btn btn-outline-light btn-sm">
                    <i class="bi bi-box-arrow-in-right me-1"></i>Login
                </a>
                <a asp-controller="Account" asp-action="Register" class="btn btn-warning btn-sm">
                    <i class="bi bi-person-plus me-1"></i>Sign Up
                </a>
            </div>
        </div>
    </div>
</nav>
