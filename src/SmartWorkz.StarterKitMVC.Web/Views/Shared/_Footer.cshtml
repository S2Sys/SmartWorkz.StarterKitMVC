@* Footer Partial - Modern Clean Footer *@
@{
    var year = DateTime.UtcNow.Year;
}
<footer class="text-light py-5 mt-auto" style="background: linear-gradient(135deg, #0f172a 0%, #1e293b 100%);">
    <div class="container">
        <div class="row g-4">
            <!-- Brand Column -->
            <div class="col-lg-4 col-md-6">
                <h5 class="fw-bold mb-3">
                    <i class="bi bi-lightning-charge-fill me-2 text-warning"></i>StarterKit<span class="text-warning">MVC</span>
                </h5>
                <p class="text-secondary mb-3">
                    Enterprise-grade ASP.NET Core MVC boilerplate with clean architecture, 
                    multi-tenancy, and modern UI.
                </p>
                <div class="d-flex gap-2">
                    <a href="https://github.com/S2Sys/SmartWorkz.StarterKitMVC" target="_blank" class="btn btn-outline-light btn-sm rounded-circle">
                        <i class="bi bi-github"></i>
                    </a>
                    <a href="#" class="btn btn-outline-light btn-sm rounded-circle">
                        <i class="bi bi-linkedin"></i>
                    </a>
                    <a href="#" class="btn btn-outline-light btn-sm rounded-circle">
                        <i class="bi bi-twitter-x"></i>
                    </a>
                    <a href="#" class="btn btn-outline-light btn-sm rounded-circle">
                        <i class="bi bi-youtube"></i>
                    </a>
                </div>
            </div>
            
            <!-- Quick Links -->
            <div class="col-lg-2 col-md-6">
                <h6 class="fw-bold mb-3 text-uppercase">Quick Links</h6>
                <ul class="list-unstyled mb-0">
                    <li class="mb-2"><a asp-controller="Home" asp-action="Index" class="text-secondary text-decoration-none footer-link">Home</a></li>
                    <li class="mb-2"><a asp-controller="Home" asp-action="About" class="text-secondary text-decoration-none footer-link">About Us</a></li>
                    <li class="mb-2"><a asp-controller="Home" asp-action="Features" class="text-secondary text-decoration-none footer-link">Features</a></li>
                    <li class="mb-2"><a asp-controller="Home" asp-action="Contact" class="text-secondary text-decoration-none footer-link">Contact</a></li>
                </ul>
            </div>
            
            <!-- Resources -->
            <div class="col-lg-2 col-md-6">
                <h6 class="fw-bold mb-3 text-uppercase">Resources</h6>
                <ul class="list-unstyled mb-0">
                    <li class="mb-2"><a href="/swagger" class="text-secondary text-decoration-none footer-link">API Reference</a></li>
                    <li class="mb-2"><a asp-area="Admin" asp-controller="Dashboard" asp-action="Index" class="text-secondary text-decoration-none footer-link">Admin Panel</a></li>
                    <li class="mb-2"><a href="https://github.com/S2Sys/SmartWorkz.StarterKitMVC" target="_blank" class="text-secondary text-decoration-none footer-link">GitHub</a></li>
                    <li class="mb-2"><a asp-controller="Home" asp-action="Search" class="text-secondary text-decoration-none footer-link">Search</a></li>
                </ul>
            </div>
            
            <!-- Newsletter -->
            <div class="col-lg-4 col-md-6">
                <h6 class="fw-bold mb-3 text-uppercase">Stay Updated</h6>
                <p class="text-secondary small mb-3">Subscribe to our newsletter for updates and news.</p>
                <form class="d-flex gap-2">
                    <input type="email" class="form-control form-control-sm bg-dark text-light border-secondary" 
                           placeholder="Enter your email">
                    <button type="submit" class="btn btn-warning btn-sm">
                        <i class="bi bi-send"></i>
                    </button>
                </form>
                <div class="mt-3">
                    <small class="text-secondary">
                        <i class="bi bi-envelope me-1"></i>info@smartworkz.com
                    </small>
                </div>
            </div>
        </div>
        
        <hr class="my-4 border-secondary">
        
        <!-- Bottom Bar -->
        <div class="row align-items-center">
            <div class="col-md-6 text-center text-md-start">
                <p class="text-secondary small mb-0">
                    &copy; @year SmartWorkz. All rights reserved. Built with <i class="bi bi-heart-fill text-danger"></i> using .NET 9
                </p>
            </div>
            <div class="col-md-6 text-center text-md-end mt-3 mt-md-0">
                <a asp-controller="Home" asp-action="Privacy" class="text-secondary small text-decoration-none me-3 footer-link">Privacy Policy</a>
                <a asp-controller="Home" asp-action="Terms" class="text-secondary small text-decoration-none me-3 footer-link">Terms of Service</a>
                <a asp-controller="Home" asp-action="Contact" class="text-secondary small text-decoration-none footer-link">Contact</a>
            </div>
        </div>
    </div>
</footer>

<style>
.footer-link:hover {
    color: #ffc107 !important;
}
</style>
